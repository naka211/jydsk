            description="COM_PROFILES_FORM_DESC_PROFILE_NAME" 
        
        
        
        filter="safehtml" /> 

       <field name="rank" type="text" size="40" class="inputbox"
        
            label="COM_PROFILES_FORM_LBL_PROFILE_RANK"
            description="COM_PROFILES_FORM_DESC_PROFILE_RANK" 
        
        
        
        filter="safehtml" /> 

       <field name="email" type="text" size="40" class="inputbox"
        
